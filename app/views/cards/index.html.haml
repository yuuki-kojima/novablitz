#wrapper
  #header
    .header-title
      %h1
        = link_to "Let's Play NovaBlitz", root_path
    .header-menu
      %ul
        %li
          = link_to 'Card List', cards_path
          = link_to 'Build Deck', ''
  .search
    .left-info
      .aspects
        %p Aspect
        %ul.aspect
          %li Arcane
          %li Chaos
          %li Divine
          %li Nature
          %li Tech
          %li.all.is_active ALL
    .right-info
      .keyword
        %p 検索：
        %input#search-field{type: "text", placeholder: 'カード名で検索'}/
      .type
        %p
          タイプ：
          %span.all.is_active ALL
          %span Unit
          %span Power
      / .sub_type
      /   %p
      /     サブタイプ：
      .cost
        %p
          コスト：
          %span.all.is_active ALL
          %span 1
          %span 2
          %span 3
          %span 4
          %span 5
          %span 6
          %span 7
          %span 8
          %span 9
          %span 10
      .rarity
        %p
          レアリティ：
          %span.all.is_active ALL
          %span Common
          %span Rare
          %span Epic
          %span Legendary
  .cards
    %ul#search-result
      = render partial: "card", collection: @cards
